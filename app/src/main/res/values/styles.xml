<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text -->
    <style name="TextAppearanceTitle">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearanceDescription">
        <item name="android:textSize">@dimen/text_description</item>
        <item name="android:textColor">@color/text_description</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
