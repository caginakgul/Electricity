<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/bottom_sheet_padding_24">

    <TextView
        android:id="@+id/projectNameTextViewTitle"
        style="@style/TextAppearanceHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_8"
        android:layout_marginTop="@dimen/text_view_margin_16"
        android:layout_marginEnd="@dimen/text_view_margin_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Project Name" />

    <TextView
        android:id="@+id/idTextView"
        style="@style/TextAppearanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_16"
        android:layout_marginTop="@dimen/text_view_margin_16"
        android:text="@string/id_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/projectNameTextViewTitle" />

    <TextView
        android:id="@+id/idTextViewDynamic"
        style="@style/TextAppearanceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_8"
        app:layout_constraintBottom_toBottomOf="@+id/idTextView"
        app:layout_constraintStart_toEndOf="@+id/idTextView"
        app:layout_constraintTop_toTopOf="@+id/idTextView"
        tools:text="TextView" />

    <TextView
        android:id="@+id/urlTextView"
        style="@style/TextAppearanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_16"
        android:layout_marginTop="@dimen/text_view_margin_8"
        android:text="@string/url_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idTextView" />

    <TextView
        android:id="@+id/urlTextViewDynamic"
        style="@style/TextAppearanceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_8"
        app:layout_constraintBottom_toBottomOf="@+id/urlTextView"
        app:layout_constraintStart_toEndOf="@+id/urlTextView"
        app:layout_constraintTop_toTopOf="@+id/urlTextView"
        tools:text="TextView" />

    <TextView
        android:id="@+id/starTextView"
        style="@style/TextAppearanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_16"
        android:layout_marginTop="@dimen/text_view_margin_8"
        android:text="@string/star_count_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/urlTextView" />

    <TextView
        android:id="@+id/starTextViewDynamic"
        style="@style/TextAppearanceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_8"
        app:layout_constraintBottom_toBottomOf="@+id/starTextView"
        app:layout_constraintStart_toEndOf="@+id/starTextView"
        app:layout_constraintTop_toTopOf="@+id/starTextView"
        tools:text="TextView" />

    <TextView
        android:id="@+id/issueTextView"
        style="@style/TextAppearanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_16"
        android:layout_marginTop="@dimen/text_view_margin_8"
        android:text="@string/issue_count_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/starTextView" />

    <TextView
        android:id="@+id/issueTextViewDynamic"
        style="@style/TextAppearanceDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_view_margin_8"
        app:layout_constraintBottom_toBottomOf="@+id/issueTextView"
        app:layout_constraintStart_toEndOf="@+id/issueTextView"
        app:layout_constraintTop_toTopOf="@+id/issueTextView"
        tools:text="TextView" />
</androidx.constraintlayout.widget.ConstraintLayout>